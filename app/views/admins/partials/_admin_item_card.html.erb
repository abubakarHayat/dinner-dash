<div class="col-md-4">
    <div class="card" style="width: 18rem;">
      <% if item.image.attached? %>
        <%= image_tag item.image, class: 'card-img-top'%>
      <% else %>
        <%= image_tag 'default_item_image.png', class: 'card-img-top'%>
      <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= item.item_title %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= item.restaurant.restaurant_name %></h6>
        <h6 class="card-subtitle mb-2 text-muted">PKR: <%= item.item_price %></h6>
        <p class="card-text"><%= item.item_description %></p>
        <%= link_to 'Edit', edit_item_path(item), class:'btn btn-primary' %>
        <%= link_to 'Delete', item_path(item), class:'btn btn-danger', method: :delete  %>
      </div>
    </div>
</div>
