
<h1>New Category</h1>
  <% if @category.errors.any? %>
  <h2>Errors:</h2>
    <% @category.errors.full_messages.each do |e|%>
    <li><%= e %></li>
    <% end %>
  <% end %>
<div class="container">
  <%= form_with model: @category, local: true do |f| %>
    <div>
      <%= f.label :category_name, class:"form-label" %><br>
      <%= f.text_field :category_name, class:"form-control" %>
    </div>

    <div>
      <%= f.submit "Create Category", class:"btn btn-primary" %>
    </div>
  <% end %>
</div>
